generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGO_URI")
}

model User {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  email       String     @unique
  password    String
  role        Role       @default(USER)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  properties  Property[]
}

model Property {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  price       Float
  imageUrl    String?    // ðŸ”¥ para upload externo
  ownerId     String     @db.ObjectId
  owner       User       @relation(fields: [ownerId], references: [id])

  tenants     Tenant[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model Tenant {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  email       String
  documentUrl String?    // ðŸ”¥ upload de documentos
  propertyId  String     @db.ObjectId
  property    Property   @relation(fields: [propertyId], references: [id])

  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

enum Role {
  ADMIN
  USER
}