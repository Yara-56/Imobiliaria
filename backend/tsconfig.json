{
  "compilerOptions": {
    /* ğŸ¯ Engine & ResoluÃ§Ã£o */
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    
    /* ğŸ“‚ Estrutura de DiretÃ³rios */
    "rootDir": "./src",
    "outDir": "./dist",
    "noEmit": false,

    /* ğŸš€ Path Mapping (Moderno e Sem baseUrl) */
    /* O uso de './' dentro dos arrays resolve o erro de caminhos nÃ£o relativos */
    "paths": {
      "@/*": ["./src/*"],
      "@modules/*": ["./src/modules/*"],
      "@shared/*": ["./src/shared/*"],
      "@config/*": ["./src/config/*"]
    },

    /* ğŸ›¡ï¸ Rigor TÃ©cnico (NÃ­vel Cybersecurity) */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,
    
    /* âš™ï¸ Compatibilidade e Performance */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts"]
}