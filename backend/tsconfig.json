{
  "compilerOptions": {
    /* ğŸ¯ Motor e resoluÃ§Ã£o */
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],

    /* ğŸ“ DiretÃ³rios */
    "rootDir": "./src",
    "outDir": "./dist",
    "noEmit": false,

    /* ğŸ” Caminhos e compatibilidade escalÃ¡vel */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@modules/*": ["src/modules/*"],
      "@shared/*": ["src/shared/*"],
      "@config/*": ["src/config/*"]
    },

    /* ğŸš« Suprimir aviso de depreciaÃ§Ã£o do baseUrl no TS7 */
    "ignoreDeprecations": "6.0",

    /* ğŸ›¡ï¸ Qualidade e seguranÃ§a */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,

    /* âš™ï¸ Compatibilidade ESM */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,

    /* ğŸ“Œ Tipos padrÃ£o */
    "types": ["node"]
  },

  "include": ["src"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts"]
}
